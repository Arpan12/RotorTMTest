<launch>
<!-- edit below this line -->
    <arg name="uav_params_path" value = "$(find rotor_tm_config)/config/uav_params/snapdragonfly_sameasMatlab.yaml"/>
    <arg name="payload_params_path" value = "$(find rotor_tm_config)/config/load_params/triangular_payload_sameasMatlab.yaml"/>
    <arg name="mechanism_params_path" value = "$(find rotor_tm_config)/config/attach_mechanism/3_robots_cable_mechanism.yaml"/>
    <arg name="payload_control_gain_path" value = "$(find rotor_tm_config)/config/control_params/triangular_payload_cooperative_cable_gains.yaml"/>
    <arg name="uav_control_gain_path" value = "$(find rotor_tm_config)/config/control_params/dragonfly_control_gains.yaml"/>
    <!-- Here is the number of controller-->
    <arg name="number_of_robots" value="3"/>
<!-- edit above this line -->


    <!-- Start simulation and trajectory nodes-->
    <node pkg="rotor_tm" type="runsim.py" name="sim" output="screen" args="$(arg payload_params_path) $(arg uav_params_path) $(arg mechanism_params_path) $(arg payload_control_gain_path) $(arg uav_control_gain_path)">
    </node>
    <node pkg="rotor_tm_traj" type="traj_node.py" name="traj" output="screen">
    </node>

    <!-- recursively launch controller -->
    <arg name="nr" default="$(eval number_of_robots + 1)"/>
    <include file="$(find rotor_tm)/launch/controller_launcher.launch" if="$(eval arg('nr') - 1 > 0)">

<!-- edit below this line -->
        <arg name="uav_params_path" value = "$(find rotor_tm_config)/config/uav_params/snapdragonfly_sameasMatlab.yaml"/>
        <arg name="payload_params_path" value = "$(find rotor_tm_config)/config/load_params/triangular_payload_sameasMatlab.yaml"/>
        <arg name="mechanism_params_path" value = "$(find rotor_tm_config)/config/attach_mechanism/3_robots_cable_mechanism.yaml"/>
        <arg name="payload_control_gain_path" value = "$(find rotor_tm_config)/config/control_params/triangular_payload_cooperative_cable_gains.yaml"/>
        <arg name="uav_control_gain_path" value = "$(find rotor_tm_config)/config/control_params/dragonfly_control_gains.yaml"/>
        <arg name="number_of_robots" value="3"/>
<!-- edit above this line -->

        <arg name="nr" value="$(eval arg('nr') - 1)"/>
    </include>

    <include file="$(find rotor_tm)/launch/rviz.launch">
    </include>

 </launch>